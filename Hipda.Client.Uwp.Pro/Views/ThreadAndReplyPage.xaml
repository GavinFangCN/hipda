<Page
    x:Class="Hipda.Client.Uwp.Pro.Views.ThreadAndReplyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hipda.Client.Uwp.Pro.Views"
    xmlns:vm="using:Hipda.Client.Uwp.Pro.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">
    
    <Page.Resources>
        <DataTemplate x:Name="ThreadListItemTemplate">
            <StackPanel Orientation="Horizontal">
                <Border x:Name="avatarImageBorder" Background="{StaticResource SystemControlHighlightListAccentLowBrush}" CornerRadius="25" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Grid CornerRadius="25">
                        <Grid.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage DecodePixelWidth="50" UriSource="{Binding ThreadItem.AvatarUrl}"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Grid.Background>
                    </Grid>
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="menuItemViewHistory" Text="查看发贴记录" />
                        </MenuFlyout>
                    </FlyoutBase.AttachedFlyout>
                </Border>

                <StackPanel>
                    <TextBlock TextWrapping="WrapWholeWords" HorizontalAlignment="Left">
                        <Run Text="{Binding ThreadItem.AuthorUsername}" FontWeight="Bold" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                        <Run Text="{Binding ThreadItem.AuthorCreateTime}" />
                    </TextBlock>

                    <TextBlock FontWeight="Bold">
                        <Run FontFamily="Segoe UI Symbol" Foreground="OrangeRed" />
                        <Run FontFamily="Segoe UI Symbol" Foreground="DeepSkyBlue" />
                        <Run Text="{Binding ThreadItem.Title}" />
                        <Run Text="{Binding ThreadItem.ViewInfo}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                    </TextBlock>

                    <TextBlock Pivot.SlideInAnimationGroup="GroupOne" HorizontalAlignment="Right" FontSize="11">
                        <Run Text="&#xE25C;" FontFamily="Segoe UI Symbol" />
                        <Run x:Name="lastPostTextBlockRun" Text="{Binding ThreadItem.LastPostInfo}"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="LayoutRoot" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="LayoutRoot_Loaded">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates" CurrentStateChanged="AdaptiveStates_CurrentStateChanged">
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1366" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LeftColumn.Width" Value="600" />
                        <Setter Target="RightColumn.Width" Value="*" />
                    </VisualState.Setters>
                </VisualState>
                
                <VisualState x:Name="DefaultState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LeftColumn.Width" Value="*" />
                        <Setter Target="RightColumn.Width" Value="1.3*" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LeftColumn.Width" Value="*" />
                        <Setter Target="RightColumn.Width" Value="0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftColumn" Width="320" />
            <ColumnDefinition x:Name="RightColumn" Width="*" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="LeftWrap" Grid.Column="0" Background="#F8F9FA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <CommandBar x:Name="LeftCommandBar" VerticalAlignment="Top" HorizontalContentAlignment="Stretch">
                <AppBarButton Icon="Add" Label="发表新贴"/>
                <AppBarButton Icon="Refresh" Label="刷新" Command="{Binding RefreshThreadCommand}"/>
                <AppBarToggleButton Icon="Sort" Label="按发布时间倒序排列"/>
                <CommandBar.SecondaryCommands>
                    <AppBarButton Icon="Globe" Label="在浏览器中打开"/>
                </CommandBar.SecondaryCommands>
            </CommandBar>

            <ListView Grid.Row="1" x:Name="ThreadListView" IsItemClickEnabled="True" IsHoldingEnabled="False" IsMultiSelectCheckBoxEnabled="False" IsSwipeEnabled="False"
                      VerticalAlignment="Top" IncrementalLoadingTrigger="Edge" ItemClick="ThreadListView_ItemClick" ItemTemplate="{StaticResource ThreadListItemTemplate}"
                      ItemsSource="{Binding ThreadItemCollection}">
            </ListView>

            <ProgressRing Grid.Row="1" x:Name="leftProgress" VerticalAlignment="Center" Visibility="Collapsed" Width="50" Height="50" />
        </Grid>

        <Grid x:Name="RightWrap" Grid.Column="1" Background="#E9EEF4" BorderBrush="LightGray" BorderThickness="1,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <CommandBar x:Name="RightCommandBar" VerticalAlignment="Top" HorizontalContentAlignment="Stretch">
                <AppBarButton Icon="Edit" Label="评论"/>
                <AppBarButton Icon="Refresh" Label="刷新" Command="{Binding RefreshRelplyCommand}"/>
                <AppBarToggleButton Icon="Sort" Label="倒序看贴"/>
                <CommandBar.SecondaryCommands>
                    <AppBarButton Icon="Globe" Label="在浏览器中打开"/>
                </CommandBar.SecondaryCommands>
            </CommandBar>

            <ListView Grid.Row="1" x:Name="ReplyListView" IsItemClickEnabled="False"
                      ItemContainerStyle="{StaticResource ReplyItemContainerStyle}"
                      ItemTemplateSelector="{StaticResource replyListItemSelector}"
                      ItemsSource="{Binding ReplyItemCollection}">
            </ListView>

            <ProgressRing Grid.Row="1" x:Name="rightProgress" VerticalAlignment="Center" Visibility="Collapsed" Width="50" Height="50" />
        </Grid>
    </Grid>
</Page>

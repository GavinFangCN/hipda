<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:Hipda.Client.Uwp.Pro.Controls">

    <Style TargetType="c:MyImage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:MyImage">
                    <ContentControl x:Name="content1" Margin="4">
                        <TextBlock Text="&#x1F304;"/>
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c:MyLink" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:MyLink">
                    <HyperlinkButton Content="{TemplateBinding LinkContent}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c:MyRefLink1" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:MyRefLink1">
                    <HyperlinkButton>
                        <TextBlock Padding="16,0" Text="{TemplateBinding LinkContent}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                    </HyperlinkButton>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c:MyRefLink2" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:MyRefLink2">
                    <HyperlinkButton>
                        <TextBlock Padding="16,0" Text="&#xE248;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                    </HyperlinkButton>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c:MyAvatarForThread" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:MyAvatarForThread">
                    <Border x:Name="border1" Style="{StaticResource AvatarStyle}"
                            Background="{ThemeResource SystemListLowColor}">
                        <Border x:Name="border2" CornerRadius="20" Width="40" Height="40" Opacity="{Binding PictureOpacity,Source={StaticResource MyLocalSettings}}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c:MyAvatarForReply" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:MyAvatarForReply">
                    <Border x:Name="border1" Background="{ThemeResource SystemListLowColor}">
                        <Border x:Name="border2" Opacity="{Binding PictureOpacity,Source={StaticResource MyLocalSettings}}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

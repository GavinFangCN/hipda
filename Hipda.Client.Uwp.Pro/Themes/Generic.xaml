<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hipda.Client.Uwp.Pro">

    <Style TargetType="local:MyImage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MyImage">
                    <ContentControl x:Name="content1" Margin="4">
                        <TextBlock Foreground="{ThemeResource SystemControlBackgroundAccentBrush}">
                            <Run Text="&#xEB9F;" FontFamily="Segoe MDL2 Assets"/>
                        </TextBlock>
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:MyLink" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MyLink">
                    <HyperlinkButton Content="{TemplateBinding LinkContent}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:MyRefLink1" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MyRefLink1">
                    <HyperlinkButton>
                        <TextBlock Text="{TemplateBinding LinkContent}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                    </HyperlinkButton>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:MyRefLink2" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MyRefLink2">
                    <HyperlinkButton>
                        <TextBlock Text="&#xE248;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                    </HyperlinkButton>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:MyAvatar" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MyAvatar">
                    <Border x:Name="border1" Style="{StaticResource AvatarStyle}"
                            Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                        <Grid x:Name="grid1" CornerRadius="20" Width="40" Height="40"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

                       FullSizeDesired="True"
                       Template="{StaticResource ContentDialogTemplate}"
                       SecondaryButtonText="关闭"/>-->

        <!--遮罩层-->
        <Grid x:Name="InputPanelMask" x:DeferLoadStrategy="Lazy" Opacity="0" Visibility="Collapsed"
              Background="{Binding RequestedTheme,ElementName=MyMainPage,Converter={StaticResource ElementThemeToMaskBackgroundBrush}}"
              Tapped="CloseInputPanelMask_Tapped"/>

        <!--输入面板，用于发表新贴、回贴、改贴-->
        <Grid x:Name="InputPanel" x:DeferLoadStrategy="Lazy" Margin="24"
              BorderThickness="4" BorderBrush="{ThemeResource SystemControlBackgroundBaseMediumLowBrush}"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              MaxWidth="640" MaxHeight="800" Visibility="Collapsed">
            <Grid.RenderTransform>
                <CompositeTransform/>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="InputPanelBackButton" Text="&#xE0A6;" Padding="12" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                           FontSize="{Binding FontSize1,Source={StaticResource MyLocalSettings}}"
                           Style="{Binding FontContrastRatio,Source={StaticResource MyLocalSettings},Converter={StaticResource FontContrastRatioToTextBlockForeground1StyleConverter}}"
                           Tapped="InputPanelBackButton_Tapped"
                           Visibility="Collapsed"/>
                <TextBlock x:Name="InputPanelForwardButton" Text="&#xE0AB;" Padding="12" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                           FontSize="{Binding FontSize1,Source={StaticResource MyLocalSettings}}"
                           Style="{Binding FontContrastRatio,Source={StaticResource MyLocalSettings},Converter={StaticResource FontContrastRatioToTextBlockForeground1StyleConverter}}"
                           Tapped="InputPanelForwardButton_Tapped"
                           Visibility="Collapsed"/>
                <TextBlock x:Name="InputPanelTitleTextBlock" Margin="12,0,0,0" VerticalAlignment="Center" FontWeight="Bold"
                           FontSize="{Binding FontSize1,Source={StaticResource MyLocalSettings}}"
                           Style="{Binding FontContrastRatio,Source={StaticResource MyLocalSettings},Converter={StaticResource FontContrastRatioToTextBlockForeground1StyleConverter}}"/>
            </StackPanel>
            <TextBlock Text="&#xE106;" Padding="12" FontFamily="{ThemeResource SymbolThemeFontFamily}" HorizontalAlignment="Right"
                       FontSize="{Binding FontSize1,Source={StaticResource MyLocalSettings}}"
                       Style="{Binding FontContrastRatio,Source={StaticResource MyLocalSettings},Converter={StaticResource FontContrastRatioToTextBlockForeground1StyleConverter}}"
                       Tapped="CloseInputPanelMask_Tapped"/>
            <Frame Grid.Row="1" x:Name="InputPanelFrame" Navigated="InputPanelFrame_Navigated"></Frame>
        </Grid>

        <!--Ink面板-->
        <Grid x:Name="InkPanel" Background="Gray" Visibility="Collapsed">
            <Grid Margin="0,52,0,0" Background="White" MaxWidth="600" MaxHeight="600">
                <InkCanvas x:Name="MyInkCanvas"/>
            </Grid>
            <ink:InkToolbar TargetInkCanvas="{x:Bind MyInkCanvas}" VerticalAlignment="Top" HorizontalAlignment="Center" PenColor="Black" ActiveTool="Pen" />
            <Button Margin="0,8,8,0" VerticalAlignment="Top" HorizontalAlignment="Right">
                <Button.Template>
                    <ControlTemplate>
                        <Grid x:Name="AcceptButtonGrid" Background="Green" Width="36" Height="36" CornerRadius="18">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="AcceptButtonGrid.Background" Value="#128A50" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="AcceptButtonGrid.Background" Value="#0C5C35" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <SymbolIcon Symbol="Accept" Foreground="White"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="上传并继续编辑内容" Click="UploadInkContentButton_Click"/>
                        <MenuFlyoutItem Text="直接发布" Click="PostInkContentButton_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
            <Button Margin="8,8,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CloseInkPanelButton_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Grid x:Name="CancelButtonGrid" Background="Red" Width="36" Height="36" CornerRadius="18">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="CancelButtonGrid.Background" Value="#FF4452" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="CancelButtonGrid.Background" Value="#BB000E" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <SymbolIcon Symbol="Cancel" Foreground="White"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!--提示条-->
        <Border x:Name="TipsBar" VerticalAlignment="Top" Margin="0,-48,0,0" Height="48" Opacity="0.9" Tapped="TipsBar_Tapped">
            <Border.RenderTransform>
                <CompositeTransform />
            </Border.RenderTransform>
            <TextBlock x:Name="TipsBarTextBlock" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="White" FontSize="{Binding FontSize1,Source={StaticResource MyLocalSettings}}"/>
        </Border>

        <!--<StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="xxx" Tapped="xxx_Tapped"/>
            <Button Content="yyy" Tapped="yyy_Tapped"/>
        </StackPanel>-->
        
    </Grid>
</Page>

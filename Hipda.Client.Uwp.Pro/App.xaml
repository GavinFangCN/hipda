<Application
    x:Class="Hipda.Client.Uwp.Pro.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hipda.Client.Uwp.Pro"
    RequestedTheme="Light">

    <Application.Resources>
        <local:ReplyListItemTemplateSelector x:Key="replyListItemTemplateSelector" 
                                     TopTemplate="{StaticResource ReplyListTopItemTemplate}" 
                                     LeftTemplate="{StaticResource ReplyListLeftItemTemplate}" 
                                     Left2Template="{StaticResource ReplyListLeft2ItemTemplate}" 
                                     RightTemplate="{StaticResource ReplyListRightItemTemplate}" />

        <local:ThreadListItemTemplateSelector x:Key="threadListItemTemplateSelector"
                                              NormalTemplate="{StaticResource ThreadListNormalItemTemplate}" 
                                              NormalTemplate2="{StaticResource ThreadListNormalItemTemplate2}" 
                                              MyThreadsTemplate="{StaticResource ThreadListMyThreadsItemTemplate}"
                                              MyPostsTemplate="{StaticResource ThreadListMyPostsItemTemplate}"/>

        <Style x:Key="ReplyItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="TabNavigation" Value="Local"/>
            <Setter Property="IsHoldingEnabled" Value="False"/>
            <Setter Property="Padding" Value="12,12,12,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="{ThemeResource ListViewItemMinWidth}"/>
            <Setter Property="MinHeight" Value="{ThemeResource ListViewItemMinHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FaceIconStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <DataTemplate x:Name="ReplyListTopItemTemplate">
            <Grid Background="White" Margin="-12,-12,-12,0" Padding="10" BorderThickness="0,0,0,1" BorderBrush="#EAEAEA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Width="80" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left" Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                    <Grid>
                        <Grid.Background>
                            <ImageBrush Stretch="Uniform">
                                <ImageBrush.ImageSource>
                                    <BitmapImage DecodePixelWidth="80" UriSource="{Binding AvatarUrl}"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Grid.Background>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="1">
                    <Border>
                        <StackPanel>
                            <TextBlock>
                                <Run Text="{Binding AuthorUsername}" FontWeight="Bold" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                                <Run Text="{Binding AuthorCreateTime}" />
                            </TextBlock>

                            <ContentControl Content="{Binding XamlContent}" />
                            <Button x:Name="showMoreButton" Margin="0,10,0,0"
                                    HorizontalAlignment="Stretch" Background="DeepSkyBlue" Foreground="White" BorderThickness="0"
                                    Visibility="Collapsed" />
                        </StackPanel>
                    </Border>

                    <Button x:Name="menuButton" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Pivot.SlideInAnimationGroup="GroupOne">
                        <Button.Template>
                            <ControlTemplate>
                                <Border Opacity="0.5" Margin="0,10,0,2" Padding="6,2" HorizontalAlignment="Center" Background="Gray" CornerRadius="10">
                                    <TextBlock HorizontalAlignment="Center" FontSize="11">
                                        <Run Text="&#xE0C2;" FontFamily="Segoe UI Symbol" />
                                        <Run Text="{Binding FloorNoStr}" />
                                    </TextBlock>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Flyout>
                            <MenuFlyout x:Name="replyMenu">
                                <MenuFlyoutItem x:Name="replyReplyMenuFlyoutItem" Text="回复" />
                                <MenuFlyoutItem x:Name="refReplyMenuFlyoutItem" Text="引用" />
                                <MenuFlyoutItem x:Name="modifyMenuFlyoutItem" Text="编辑" IsEnabled="False" />
                                <MenuFlyoutItem x:Name="viewFullContentMenuFlyoutItem" Text="查看本楼层完整原始内容" />
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ReplyListLeftItemTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource FaceIconStyle}" VerticalAlignment="Top" Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                    <Grid CornerRadius="20">
                        <Grid.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage DecodePixelWidth="40" UriSource="{Binding AvatarUrl}"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Grid.Background>
                    </Grid>
                </Border>

                <FontIcon Grid.Row="0" Grid.Column="1" Margin="0 8 0 0" Glyph="&#xE18A;" FontFamily="Segoe UI Symbol" FontSize="16" Foreground="White" VerticalAlignment="Top"/>

                <Border Grid.Row="0" Grid.Column="2" Margin="0 0 60 0" Padding="10" Background="White" HorizontalAlignment="Left">
                    <StackPanel>
                        <TextBlock>
                            <Run Text="{Binding AuthorUsername}" FontWeight="Bold" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                            <Run Text="{Binding AuthorCreateTime}" />
                        </TextBlock>

                        <ContentControl Content="{Binding XamlContent}" />
                        <Button x:Name="showMoreButton" Margin="0,10,0,0"
                                HorizontalAlignment="Stretch" Background="DeepSkyBlue" Foreground="White" BorderThickness="0"
                                Visibility="Collapsed" />
                    </StackPanel>
                </Border>

                <Button x:Name="menuButton" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Pivot.SlideInAnimationGroup="GroupOne">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Opacity="0.5" Margin="0,10,0,2" Padding="6,2" HorizontalAlignment="Center" Background="Gray" CornerRadius="10">
                                <TextBlock HorizontalAlignment="Center" FontSize="11">
                                    <Run Text="&#xE0C2;" FontFamily="Segoe UI Symbol" />
                                    <Run Text="{Binding FloorNoStr}" />
                                </TextBlock>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Flyout>
                        <MenuFlyout x:Name="replyMenu">
                            <MenuFlyoutItem x:Name="replyReplyMenuFlyoutItem" Text="回复" />
                            <MenuFlyoutItem x:Name="refReplyMenuFlyoutItem" Text="引用" />
                            <MenuFlyoutItem x:Name="modifyMenuFlyoutItem" Text="编辑" IsEnabled="False" />
                            <MenuFlyoutItem x:Name="viewFullContentMenuFlyoutItem" Text="查看本楼层完整原始内容" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ReplyListLeft2ItemTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource FaceIconStyle}" VerticalAlignment="Top" Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                    <Grid CornerRadius="20">
                        <Grid.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage DecodePixelWidth="40" UriSource="{Binding AvatarUrl}"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Grid.Background>
                    </Grid>
                </Border>

                <FontIcon Grid.Row="0" Grid.Column="1" Margin="0 8 0 0" Glyph="&#xE18A;" FontFamily="Segoe UI Symbol" FontSize="16" Foreground="{ThemeResource SystemControlHighlightListAccentLowBrush}" VerticalAlignment="Top"/>

                <Border Grid.Row="0" Grid.Column="2" Margin="0 0 60 0" Padding="10" Background="White" HorizontalAlignment="Left" BorderThickness="2,0,0,0" BorderBrush="{ThemeResource SystemControlHighlightListAccentLowBrush}">
                    <StackPanel>
                        <TextBlock>
                            <Run Text="楼主 " Foreground="Green" FontSize="11" />
                            <Run Text="{Binding AuthorUsername}" FontWeight="Bold" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                            <Run Text="{Binding AuthorCreateTime}" />
                        </TextBlock>

                        <ContentControl Content="{Binding XamlContent}" />
                        <Button x:Name="showMoreButton" Margin="0,10,0,0"
                                HorizontalAlignment="Stretch" Background="DeepSkyBlue" Foreground="White" BorderThickness="0"
                                Visibility="Collapsed" />
                    </StackPanel>
                </Border>

                <Button x:Name="menuButton" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Pivot.SlideInAnimationGroup="GroupOne">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Opacity="0.5" Margin="0,10,0,2" Padding="6,2" HorizontalAlignment="Center" Background="Gray" CornerRadius="10">
                                <TextBlock HorizontalAlignment="Center" FontSize="11">
                                    <Run Text="&#xE0C2;" FontFamily="Segoe UI Symbol" />
                                    <Run Text="{Binding FloorNoStr}" />
                                </TextBlock>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Flyout>
                        <MenuFlyout x:Name="replyMenu">
                            <MenuFlyoutItem x:Name="replyReplyMenuFlyoutItem" Text="回复" />
                            <MenuFlyoutItem x:Name="refReplyMenuFlyoutItem" Text="引用" />
                            <MenuFlyoutItem x:Name="modifyMenuFlyoutItem" Text="编辑" IsEnabled="False" />
                            <MenuFlyoutItem x:Name="viewFullContentMenuFlyoutItem" Text="查看本楼层完整原始内容" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ReplyListRightItemTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="44"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource FaceIconStyle}" VerticalAlignment="Top" HorizontalAlignment="Right" Background="{ThemeResource SystemControlBackgroundListLowBrush}">
                    <Grid CornerRadius="20">
                        <Grid.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage DecodePixelWidth="40" UriSource="{Binding AvatarUrl}"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Grid.Background>
                    </Grid>
                </Border>

                <FontIcon Grid.Row="0" Grid.Column="1" Margin="0 8 0 0" Glyph="&#xE18A;" FontFamily="Segoe UI Symbol" FontSize="16" Foreground="{ThemeResource SystemControlHighlightListAccentLowBrush}" VerticalAlignment="Top" HorizontalAlignment="Right" FlowDirection="RightToLeft"/>

                <Border Grid.Row="0" Grid.Column="0" Margin="60 0 0 0" Padding="10" Background="White" BorderThickness="2" BorderBrush="{ThemeResource SystemControlHighlightListAccentLowBrush}" HorizontalAlignment="Right" CornerRadius="12">
                    <StackPanel>
                        <TextBlock>
                            <Run Text="{Binding AuthorUsername}" FontWeight="Bold" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                            <Run Text="{Binding AuthorCreateTime}" />
                        </TextBlock>

                        <ContentControl Content="{Binding XamlContent}" />
                        <Button x:Name="showMoreButton" Margin="0,10,0,0"
                                HorizontalAlignment="Stretch" Background="DeepSkyBlue" Foreground="White" BorderThickness="0"
                                Visibility="Collapsed" />
                    </StackPanel>
                </Border>

                <Button x:Name="menuButton" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Pivot.SlideInAnimationGroup="GroupOne">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Opacity="0.5" Margin="0,10,0,2" Padding="6,2" HorizontalAlignment="Center" Background="Gray" CornerRadius="10">
                                <TextBlock HorizontalAlignment="Center" FontSize="11">
                                    <Run Text="&#xE0C2;" FontFamily="Segoe UI Symbol" />
                                    <Run Text="{Binding FloorNoStr}" />
                                </TextBlock>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Flyout>
                        <MenuFlyout x:Name="replyMenu">
                            <MenuFlyoutItem x:Name="replyReplyMenuFlyoutItem" Text="回复" />
                            <MenuFlyoutItem x:Name="refReplyMenuFlyoutItem" Text="引用" />
                            <MenuFlyoutItem x:Name="modifyMenuFlyoutItem" Text="编辑" IsEnabled="False" />
                            <MenuFlyoutItem x:Name="viewFullContentMenuFlyoutItem" Text="查看本楼层完整原始内容" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ThreadListNormalItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="56"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="menuItemViewHistory" Text="查看作者发贴记录" />
                        <MenuFlyoutItem x:Name="menuItemBlockAuthor" Text="屏蔽作者" />
                        <MenuFlyoutItem x:Name="menuItemBlockThread" Text="屏蔽此主题" />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>

                <Border Grid.Column="0" Margin="1,0,0,0" Width="3" Background="{Binding StatusColor}"/>

                <Border Grid.Column="1" Margin="8" Background="{ThemeResource SystemControlBackgroundListLowBrush}" Style="{StaticResource FaceIconStyle}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Grid CornerRadius="20">
                        <Grid.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage DecodePixelWidth="40" UriSource="{Binding ThreadItem.AvatarUrl}"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Grid.Background>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="2" Margin="0,4">
                    <TextBlock FontSize="11" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}">
                                        <Run Text="{Binding ThreadItem.AuthorUsername}" FontWeight="Bold" />
                                        <Run Text="{Binding ThreadItem.AuthorCreateTime}" />
                    </TextBlock>

                    <TextBlock Margin="4" TextWrapping="Wrap">
                                        <Run FontFamily="Segoe UI Symbol" Foreground="OrangeRed" />
                                        <Run FontFamily="Segoe UI Symbol" Foreground="DeepSkyBlue" />
                                        <Run Text="{Binding ThreadItem.Title}" />
                                        <Run Text="{Binding ThreadItem.ViewInfo}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                    </TextBlock>

                    <TextBlock FontSize="11" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}" HorizontalAlignment="Right">
                                        <Run Text=" &#xE25C;" FontFamily="Segoe UI Symbol" />
                                        <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Name="ThreadListNormalItemTemplate2">
            <StackPanel Orientation="Horizontal">
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="menuItemViewHistory" Text="查看作者发贴记录" />
                        <MenuFlyoutItem x:Name="menuItemBlockAuthor" Text="屏蔽作者" />
                        <MenuFlyoutItem x:Name="menuItemBlockThread" Text="屏蔽此主题" />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>

                <Border Width="3" Background="{Binding StatusColor}"/>

                <Border Margin="8,8,8,8" Background="{ThemeResource SystemControlBackgroundListLowBrush}" Style="{StaticResource FaceIconStyle}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Grid CornerRadius="20">
                        <Grid.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage DecodePixelWidth="40" UriSource="{Binding ThreadItem.AvatarUrl}"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Grid.Background>
                    </Grid>
                </Border>

                <StackPanel Margin="0,8,0,0">
                    <TextBlock FontSize="11" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}">
                                        <Run Text="{Binding ThreadItem.AuthorUsername}" FontWeight="Bold" />
                                        <Run Text="{Binding ThreadItem.AuthorCreateTime}" />
                                        <Run Text=" &#xE25C;" FontFamily="Segoe UI Symbol" />
                                        <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                    </TextBlock>

                    <TextBlock Margin="0,4,0,0" TextWrapping="Wrap">
                                        <Run FontFamily="Segoe UI Symbol" Foreground="OrangeRed" />
                                        <Run FontFamily="Segoe UI Symbol" Foreground="DeepSkyBlue" />
                                        <Run Text="{Binding ThreadItem.Title}" />
                                        <Run Text="{Binding ThreadItem.ViewInfo}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Name="ThreadListMyThreadsItemTemplate">
            <StackPanel Orientation="Horizontal">
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="menuItemViewHistory" Text="查看作者发贴记录" />
                        <MenuFlyoutItem x:Name="menuItemBlockAuthor" Text="屏蔽作者" />
                        <MenuFlyoutItem x:Name="menuItemBlockThread" Text="屏蔽此主题" />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>

                <Border Width="3" Background="{Binding StatusColor}"/>

                <StackPanel Margin="8">
                    <TextBlock FontSize="11" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}">
                                        <Run Text="{Binding ThreadItem.AuthorUsername}" FontWeight="Bold" />
                                        <Run Text="{Binding ThreadItem.AuthorCreateTime}" />
                                        <Run Text=" &#xE25C;" FontFamily="Segoe UI Symbol" />
                                        <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                    </TextBlock>

                    <TextBlock Margin="0,4,0,0">
                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="{Binding ThreadItem.TitleForToolTip}"></ToolTip>
                                        </ToolTipService.ToolTip>
                                        <Run FontFamily="Segoe UI Symbol" Foreground="OrangeRed" />
                                        <Run FontFamily="Segoe UI Symbol" Foreground="DeepSkyBlue" />
                                        <Run Text="{Binding ThreadItem.Title}" />
                                        <Run Text="{Binding ThreadItem.ViewInfo}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Name="ThreadListMyPostsItemTemplate">
            <StackPanel Orientation="Horizontal">
                <FlyoutBase.AttachedFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="menuItemViewHistory" Text="查看作者发贴记录" />
                        <MenuFlyoutItem x:Name="menuItemBlockAuthor" Text="屏蔽作者" />
                        <MenuFlyoutItem x:Name="menuItemBlockThread" Text="屏蔽此主题" />
                    </MenuFlyout>
                </FlyoutBase.AttachedFlyout>

                <Border Width="3" Background="{Binding StatusColor}"/>

                <Border Margin="8,8,8,8" Background="{ThemeResource SystemControlBackgroundListLowBrush}" Style="{StaticResource FaceIconStyle}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Grid CornerRadius="20">
                        <Grid.Background>
                            <ImageBrush Stretch="UniformToFill">
                                <ImageBrush.ImageSource>
                                    <BitmapImage DecodePixelWidth="40" UriSource="{Binding ThreadItem.AvatarUrl}"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Grid.Background>
                    </Grid>
                </Border>

                <StackPanel Margin="0,8,0,0">
                    <TextBlock FontSize="11" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}">
                                        <Run Text="{Binding ThreadItem.AuthorUsername}" FontWeight="Bold" />
                                        <Run Text="{Binding ThreadItem.AuthorCreateTime}" />
                                        <Run Text=" &#xE25C;" FontFamily="Segoe UI Symbol" />
                                        <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                    </TextBlock>

                    <TextBlock Margin="0,4,0,0">
                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="{Binding ThreadItem.TitleForToolTip}"></ToolTip>
                                        </ToolTipService.ToolTip>
                                        <Run FontFamily="Segoe UI Symbol" Foreground="OrangeRed" />
                                        <Run FontFamily="Segoe UI Symbol" Foreground="DeepSkyBlue" />
                                        <Run Text="{Binding ThreadItem.Title}" />
                                        <Run Text="{Binding ThreadItem.ViewInfo}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</Application>

                            <MenuFlyoutItem x:Name="refReplyMenuFlyoutItem" Text="引用" />
                            <MenuFlyoutItem x:Name="modifyMenuFlyoutItem" Text="编辑" IsEnabled="False" />
                            <MenuFlyoutItem x:Name="viewFullContentMenuFlyoutItem" Text="查看本楼层完整原始内容" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ReplyListRightItemTemplate">
            <Grid>
                <local:MyAvatar UserId="{Binding AuthorUserId}" Username="{Binding AuthorUsername}" ThreadId="0" IsNotAssociateThreadId="True" HorizontalAlignment="Right" VerticalAlignment="Top"/>

                <ContentControl Margin="0 16 48 0" HorizontalAlignment="Right" VerticalAlignment="Top" Template="{StaticResource ReplyRightArrow}"/>

                <Border Margin="64,0,54,32" Padding="8" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderThickness="1" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="{ThemeResource ToolTipContentThemeFontSize}">
                            <Run Text="{Binding AuthorUsername}" FontWeight="Bold" />
                            <Run Text="{Binding AuthorCreateTime}" />
                        </TextBlock>

                        <ContentControl Content="{Binding XamlContent}" Foreground="{ThemeResource SystemControlForegroundBaseMediumHighBrush}" />
                        <Button x:Name="showMoreButton" Margin="0,10,0,0"
                                HorizontalAlignment="Stretch" Background="DeepSkyBlue" Foreground="White" BorderThickness="0"
                                Visibility="Collapsed" />
                    </StackPanel>
                </Border>

                <Button x:Name="menuButton" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Opacity="0.5" Margin="0,10,0,2" Padding="6,2" HorizontalAlignment="Center" Background="Gray" CornerRadius="10">
                                <TextBlock HorizontalAlignment="Center" FontSize="{ThemeResource ToolTipContentThemeFontSize}">
                                    <Run Text="&#xE10C;" FontFamily="Segoe MDL2 Assets" />
                                    <Run Text="{Binding FloorNoStr}" />
                                </TextBlock>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Flyout>
                        <MenuFlyout x:Name="replyMenu">
                            <MenuFlyoutItem x:Name="replyReplyMenuFlyoutItem" Text="回复" />
                            <MenuFlyoutItem x:Name="refReplyMenuFlyoutItem" Text="引用" />
                            <MenuFlyoutItem x:Name="modifyMenuFlyoutItem" Text="编辑" IsEnabled="False" />
                            <MenuFlyoutItem x:Name="viewFullContentMenuFlyoutItem" Text="查看本楼层完整原始内容" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </DataTemplate>

        <Style x:Name="UnReadColorStyle" TargetType="Grid">
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlBackgroundAccentBrush}"/>
        </Style>

        <Style x:Name="ReadColorStyle" TargetType="Grid">
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"/>
        </Style>

        <Style x:Key="TopThreadItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseLowBrush}"/>
        </Style>

        <Style x:Key="NormalThreadItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </Style>

        <Style x:Key="ThreadItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="0,0,20,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>

        <DataTemplate x:Name="ThreadListNormalItemTemplate">
            <Grid Margin="1,0,0,0" BorderThickness="2,0,0,0" Style="{Binding StatusColorStyle}">
                <local:MyAvatar Margin="8,8,0,0" UserId="{Binding ThreadItem.AuthorUserId}" Username="{Binding ThreadItem.AuthorUsername}" ThreadId="{Binding ThreadItem.ThreadId}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <TextBlock Margin="56,4,0,0" FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Run Text="{Binding ThreadItem.AuthorUsername}" FontWeight="Bold" />
                    <Run Text="{Binding ThreadItem.AuthorCreateTime}" />
                </TextBlock>

                <TextBlock Margin="56,22,0,20" TextWrapping="Wrap" Style="{Binding ThreadItem.ThreadItemStyle}" HorizontalAlignment="Left" VerticalAlignment="Top"><Run FontFamily="Segoe MDL2 Assets" Foreground="Gray" Text="{Binding ThreadItem.TopFontIcon}" /><Run FontFamily="Segoe MDL2 Assets" Foreground="OrangeRed" Text="{Binding ThreadItem.ImageFontIcon}" /><Run FontFamily="Segoe MDL2 Assets" Foreground="DeepSkyBlue" Text="{Binding ThreadItem.FileFontIcon}" />
                    <Run Text="{Binding ThreadItem.Title}" />
                    <Run Text="{Binding ThreadItem.ViewInfo}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                </TextBlock>

                <TextBlock Margin="0,0,0,4" FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlForegroundBaseLowBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Run Text=" &#xE25C;" FontFamily="Segoe MDL2 Assets" />
                    <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                </TextBlock>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ThreadListMyThreadsItemTemplate">
            <Grid Margin="1,0,0,0" BorderThickness="2,0,0,0" Style="{Binding StatusColorStyle}">
                <StackPanel Margin="8,4,0,4">
                    <TextBlock FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                        <Run Text="{Binding ThreadItem.ForumName}" />
                    </TextBlock>

                    <TextBlock Margin="2" TextWrapping="Wrap" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}">
                        <Run Text="{Binding ThreadItem.Title}" />
                    </TextBlock>

                    <TextBlock FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlBackgroundBaseLowBrush}" HorizontalAlignment="Right">
                        <Run Text=" &#xE25C;" FontFamily="Segoe MDL2 Assets" />
                        <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ThreadListMyPostsItemTemplate">
            <Grid Margin="1,0,0,0" BorderThickness="2,0,0,0" Style="{Binding StatusColorStyle}">
                <StackPanel Margin="8,4,0,4">
                    <TextBlock FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                        <Run Text="{Binding ThreadItem.ForumName}" />
                    </TextBlock>

                    <TextBlock Margin="2" TextWrapping="Wrap" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}">
                        <Run Text="{Binding ThreadItem.Title}" />
                        <LineBreak/>
                        <Run Text=" &#xE25C;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}" FontSize="{ThemeResource ToolTipContentThemeFontSize}" />
                        <Run Text="{Binding ThreadItem.LastReplyContent}" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}" FontSize="{ThemeResource ToolTipContentThemeFontSize}" />
                    </TextBlock>

                    <TextBlock FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlBackgroundBaseLowBrush}" HorizontalAlignment="Right">
                        <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ThreadListMyFavoritesItemTemplate">
            <Grid>
                <StackPanel Margin="8,4,0,4">
                    <TextBlock FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                        <Run Text="{Binding ThreadItem.ForumName}" />
                    </TextBlock>

                    <TextBlock Margin="2" TextWrapping="Wrap" Foreground="{ThemeResource SystemControlBackgroundBaseMediumBrush}">
                        <Run Text="{Binding ThreadItem.Title}" />
                    </TextBlock>

                    <TextBlock FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlBackgroundBaseLowBrush}" HorizontalAlignment="Right">
                        <Run Text=" &#xE25C;" FontFamily="Segoe MDL2 Assets" />
                        <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ThreadListSearchTitleItemTemplate">
            <Grid Margin="1,0,0,0" BorderThickness="2,0,0,0" Style="{Binding StatusColorStyle}">
                <local:MyAvatar Margin="8,8,0,0" UserId="{Binding ThreadItem.AuthorUserId}" Username="{Binding ThreadItem.AuthorUsername}" ThreadId="{Binding ThreadItem.ThreadId}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <TextBlock Margin="56,4,0,0" FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Run Text="{Binding ThreadItem.AuthorUsername}" FontWeight="Bold" />
                    <Run Text="{Binding ThreadItem.AuthorCreateTime}" />
                </TextBlock>

                <ContentControl Content="{Binding ThreadItem.TitleControl}" Margin="56,22,0,20" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <TextBlock Margin="0,0,0,4" FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlForegroundBaseLowBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Run Text=" &#xE25C;" FontFamily="Segoe MDL2 Assets" />
                    <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                </TextBlock>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="ThreadListSearchFullTextItemTemplate">
            <Grid Margin="1,0,0,0" BorderThickness="2,0,0,0" Style="{Binding StatusColorStyle}">
                <local:MyAvatar Margin="8,8,0,0" UserId="{Binding ThreadItem.AuthorUserId}" Username="{Binding ThreadItem.AuthorUsername}" ThreadId="{Binding ThreadItem.ThreadId}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <TextBlock Margin="56,4,0,0" FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Run Text="{Binding ThreadItem.AuthorUsername}" FontWeight="Bold" />
                    <Run Text="{Binding ThreadItem.AuthorCreateTime}" />
                </TextBlock>

                <TextBlock Margin="56,22,0,20" TextWrapping="Wrap" Style="{StaticResource NormalThreadItemStyle}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Run FontFamily="Segoe MDL2 Assets" Foreground="OrangeRed" Text="{Binding ThreadItem.ImageFontIcon}" />
                    <Run FontFamily="Segoe MDL2 Assets" Foreground="DeepSkyBlue" Text="{Binding ThreadItem.FileFontIcon}" />
                    <Run Text="{Binding ThreadItem.Title}" />
                    <Run Text="{Binding ThreadItem.ViewInfo}" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                </TextBlock>

                <TextBlock Margin="0,0,0,4" FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlForegroundBaseLowBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Run Text=" &#xE25C;" FontFamily="Segoe MDL2 Assets" />
                    <Run Text="{Binding ThreadItem.LastReplyInfo}"/>
                </TextBlock>
            </Grid>
        </DataTemplate>

        <local:UserMessageListItemTemplateSelector x:Key="userMessageListItemTemplateSelector"
                                                   LeftTemplate="{StaticResource UserMessageLeftItemTemplate}"
                                                   RightTemplate="{StaticResource UserMessageRightItemTemplate}"/>

        <DataTemplate x:Name="UserMessageLeftItemTemplate">
            <Grid>
                <ContentControl Margin="8 0 0 0" Template="{StaticResource MessageUpArrow}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <StackPanel Margin="0,8,40,0" Padding="8" Background="{ThemeResource SystemControlBackgroundAccentBrush}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ContentControl Content="{Binding XamlContent}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}">
                        <Run Text="{Binding Username}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding Time}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Name="UserMessageRightItemTemplate">
            <Grid>
                <StackPanel Margin="40,0,0,8" Padding="8" Background="{ThemeResource SystemControlHighlightListAccentLowBrush}" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <ContentControl Content="{Binding XamlContent}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock FontSize="{ThemeResource ToolTipContentThemeFontSize}" Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}">
                        <Run Text="我 "/>
                        <Run Text="{Binding Time}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding IsReadInfo}" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
                <ContentControl Margin="0 0 8 0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Template="{StaticResource MessageDownArrow}"/>
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>

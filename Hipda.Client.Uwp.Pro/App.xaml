            <Grid>
                <Ellipse Margin="6,6,0,0" Style="{Binding StatusColorStyle}" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <c:MyAvatarForReply Margin="14,8,0,0" UserId="{Binding AuthorUserId}" Username="{Binding AuthorUsername}" ForumId="{Binding ForumId}" ForumName="{Binding ForumName}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <TextBlock Margin="60,4,0,0" FontSize="{Binding FontSize2,Source={StaticResource MyLocalSettings}}"
                           HorizontalAlignment="Left" VerticalAlignment="Top"
                           Style="{Binding FontContrastRatio,Source={StaticResource MyLocalSettings},Converter={StaticResource FontContrastRatioToTextBlockForeground2StyleConverter}}">
                    <Run Text="{Binding AuthorUsername}" FontWeight="Bold" />
                    <Run Text="{Binding AuthorCreateTime}" />
                </TextBlock>

                <ContentControl Content="{Binding TitleControl}" Margin="60,22,0,22" HorizontalAlignment="Left" VerticalAlignment="Top"
                                FontSize="{Binding FontSize1,Source={StaticResource MyLocalSettings}}"/>

                <TextBlock Margin="0,0,0,4" FontSize="{Binding FontSize2,Source={StaticResource MyLocalSettings}}"
                           HorizontalAlignment="Right" VerticalAlignment="Bottom"
                           Style="{Binding FontContrastRatio,Source={StaticResource MyLocalSettings},Converter={StaticResource FontContrastRatioToTextBlockForeground3StyleConverter}}">
                    <Run Text="&#x1F5E9;" FontFamily="{ThemeResource SymbolThemeFontFamily}" />
                    <Run Text="{Binding LastReplyInfo}" FontStyle="Italic"/>
                </TextBlock>
            </Grid>
        </DataTemplate>

        <local:ThreadListItemTemplateSelector x:Key="threadListItemTemplateSelector"
                                              ThreadListNormalItemTemplate="{StaticResource ThreadListNormalItemTemplate}" 
                                              ThreadListMyThreadsItemTemplate="{StaticResource ThreadListMyThreadsItemTemplate}"
                                              ThreadListMyPostsItemTemplate="{StaticResource ThreadListMyPostsItemTemplate}"
                                              ThreadListMyFavoritesItemTemplate="{StaticResource ThreadListMyFavoritesItemTemplate}"
                                              ThreadListSearchTitleItemTemplate="{StaticResource ThreadListSearchTitleItemTemplate}"
                                              ThreadListSearchFullTextItemTemplate="{StaticResource ThreadListSearchFullTextItemTemplate}"
                                              />


        <cvt:UserIdStringToInt32Converter x:Key="UserIdStringToInt32Converter" />
        <DataTemplate x:Key="NoticeQuoteOrReplyItemTemplate">
            <Grid>
                <Ellipse Margin="6,6,0,0" Fill="{Binding StatusColorBrush}" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <c:MyAvatarForReply Margin="14,8,0,0" UserId="{Binding ActionInfo[0],Converter={StaticResource UserIdStringToInt32Converter}}"
                                    Username="{Binding Username}" ForumId="{Binding ForumId}" ForumName="{Binding ForumName}"
                                    HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <StackPanel Margin="60,4,0,12" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <RichTextBlock FontSize="{Binding FontSize2,Source={StaticResource MyLocalSettings}}" >
                        <Paragraph>
                            <Run Text="{Binding Username}" FontWeight="Bold"/>
                            <Run Text="{Binding ActionTime}" />
                            <LineBreak/>
                            <Run Text="引用或答复了您在此主题的贴子" />
                            <LineBreak/>
                            <InlineUIContainer>
                                <HyperlinkButton Command="{Binding ViewCommand}">
                                    <HyperlinkButton.Content>
                                        <TextBlock TextWrapping="Wrap">
                                            <Underline>
                                                <Run Text="{Binding ActionInfo[2],Converter={StaticResource TextToEmojiConverter}}"/>
                                            </Underline>
                                        </TextBlock>
                                    </HyperlinkButton.Content>
                                </HyperlinkButton>
                            </InlineUIContainer>
                            <LineBreak/>
                            <Run Text="我说：" FontWeight="Bold"/>
                            <Run Text="{Binding ActionInfo[3],Converter={StaticResource TextToEmojiConverter}}"/>
                            <LineBreak/>
                            <Run Text="他说：" FontWeight="Bold"/>
                            <Run Text="{Binding ActionInfo[4],Converter={StaticResource TextToEmojiConverter}}" />
                        </Paragraph>
                    </RichTextBlock>
                    <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                        <Button Margin="0,0,8,0"  Content="回复" Command="{Binding ReplyCommand}"/>
                        <Button  Content="查看" Command="{Binding ViewCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="NoticeThreadItemTemplate">
            <Grid>
                <Ellipse Margin="6,6,0,0" Fill="{Binding StatusColorBrush}" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <Border Margin="14,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Height="40"
                        Background="{ThemeResource SystemListLowColor}" CornerRadius="20"/>
                <StackPanel Margin="60,4,0,12">
                    <RichTextBlock FontSize="{Binding FontSize2,Source={StaticResource MyLocalSettings}}"
                                   >
                        <Paragraph>
                            <Run Text="{Binding Username}" FontWeight="Bold" />
                            <LineBreak/>
                            <Run Text="{Binding ActionTime}" />
                            <LineBreak/>
                            <Run Text="回复了您关注的主题" />
                            <LineBreak/>
                            <InlineUIContainer>
                                <HyperlinkButton Command="{Binding ViewCommand}">
                                    <HyperlinkButton.Content>
                                        <TextBlock TextWrapping="Wrap">
                                            <Underline>
                                                <Run Text="{Binding ActionInfo[1],Converter={StaticResource TextToEmojiConverter}}"/>
                                            </Underline>
                                        </TextBlock>
                                    </HyperlinkButton.Content>
                                </HyperlinkButton>
                            </InlineUIContainer>
                        </Paragraph>
                    </RichTextBlock>
                    <Button Margin="0,0,8,0"  Content="查看" Command="{Binding ViewCommand}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="NoticeBuddyItemTemplate">
            <Grid>
                <Ellipse Margin="6,6,0,0" Fill="{Binding StatusColorBrush}" Width="6" Height="6" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <c:MyAvatarForReply Margin="14,8,0,0" UserId="{Binding ActionInfo[0],Converter={StaticResource UserIdStringToInt32Converter}}"
                                    Username="{Binding Username}" ForumId="{Binding ForumId}" ForumName="{Binding ForumName}"
                                    HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <StackPanel Margin="60,4,0,12" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <RichTextBlock FontSize="{Binding FontSize2,Source={StaticResource MyLocalSettings}}"
                                   >
                        <Paragraph>
                            <Run Text="{Binding Username}" FontWeight="Bold" />
                            <Run Text="{Binding ActionTime}" />
                            <LineBreak/>
                            <Run Text="添加您为好友" />
                        </Paragraph>
                    </RichTextBlock>
                    <Button Margin="0,8,0,0"  Command="{Binding AddBuddyCommand}">
                        <TextBlock>
                            <Run Text="加 "/>
                            <Run Text="{Binding Username}"/>
                            <Run Text=" 为好友"/>
                        </TextBlock>
                    </Button>
                </StackPanel>
            </Grid>
        </DataTemplate>



        <local:UserMessageListItemTemplateSelector x:Key="userMessageListItemTemplateSelector"
                                                   UserMessageLeftItemTemplate="{StaticResource UserMessageLeftItemTemplate}"
                                                   UserMessageRightItemTemplate="{StaticResource UserMessageRightItemTemplate}"/>

        <DataTemplate x:Key="UserMessageLeftItemTemplate">
            <Grid>
                <ContentControl Margin="8 0 0 0" Template="{StaticResource MessageUpArrow}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <StackPanel Margin="0,8,40,0" Padding="8" Background="{ThemeResource SystemControlBackgroundAccentBrush}" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ContentControl Content="{Binding XamlContent}" />
                    <TextBlock FontSize="{Binding FontSize2,Source={StaticResource MyLocalSettings}}" >
                        <Run Text="{Binding Username}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding Time}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="UserMessageRightItemTemplate">
            <Grid>
                <StackPanel Margin="40,0,0,8" Padding="8" Background="{ThemeResource SystemControlHighlightListAccentLowBrush}" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <ContentControl Content="{Binding XamlContent}" />
                    <TextBlock FontSize="{Binding FontSize2,Source={StaticResource MyLocalSettings}}" >
                        <Run Text="我 "/>
                        <Run Text="{Binding Time}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding IsReadInfo}" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
                <ContentControl Margin="0 0 8 0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Template="{StaticResource MessageDownArrow}"/>
            </Grid>
        </DataTemplate>

        
    </Application.Resources>
</Application>
